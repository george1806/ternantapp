# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_NAME=Apartment Management SaaS
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=apartment_user
DB_PASSWORD=apartment_pass_dev
DB_DATABASE=apartment_management
DB_LOGGING=true
DB_SYNCHRONIZE=false
DB_MIGRATIONS_RUN=false

# Database Connection Pool (Performance optimization)
DB_POOL_SIZE=20
DB_POOL_ACQUIRE_TIMEOUT=30000
DB_POOL_IDLE_TIMEOUT=10000
DB_POOL_MAX_REUSES=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Email (Mailpit for dev, SMTP for prod)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM_NAME=Apartment Management
MAIL_FROM_EMAIL=noreply@apartment.app
MAIL_SECURE=false

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_DESTINATION=./uploads
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Queue (BullMQ)
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
QUEUE_REDIS_DB=1

# Logging
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# Security
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
CSRF_ENABLED=true
HELMET_ENABLED=true

# Multi-tenant
TENANT_ISOLATION_STRICT=true
TENANT_CACHE_TTL=300

# Features
FEATURE_TENANT_PORTAL=true
FEATURE_FILE_UPLOAD=true
FEATURE_AUDIT_LOG=true
FEATURE_QUEUE_ENABLED=true

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
