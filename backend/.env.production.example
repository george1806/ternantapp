# =================================
# PRODUCTION ENVIRONMENT VARIABLES
# =================================
# ⚠️ CRITICAL: Change ALL default values before deployment!
# ⚠️ DO NOT commit actual .env.production file to git!

# ===========================
# APPLICATION CONFIGURATION
# ===========================
NODE_ENV=production
PORT=3001
APP_NAME=TernantApp
APP_URL=https://your-domain.com
API_PREFIX=api/v1

# ===========================
# DATABASE CONFIGURATION
# ===========================
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_USER=ternantapp_prod
DATABASE_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DATABASE_NAME=ternantapp_production
DATABASE_SSL=false

# Database Connection Pool (NEW - v1.0.1)
DB_POOL_SIZE=20
DB_POOL_ACQUIRE_TIMEOUT=30000

# ===========================
# REDIS CONFIGURATION (NEW - v1.0.1)
# ===========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0
REDIS_TTL=3600

# ===========================
# JWT SECURITY
# ===========================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_64_CHAR_RANDOM_STRING
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_64_CHAR_RANDOM_STRING
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=CHANGE_THIS_TO_32_CHAR_RANDOM_STRING

# ===========================
# CORS CONFIGURATION
# ===========================
CORS_ORIGINS=https://your-frontend-domain.com
CORS_CREDENTIALS=true

# ===========================
# RATE LIMITING (NEW - v1.0.1)
# ===========================
# Throttler configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===========================
# LOGGING (NEW - v1.0.1)
# ===========================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ===========================
# MONITORING (OPTIONAL - v1.0.1)
# ===========================
# Prometheus metrics endpoint enabled by default
METRICS_ENABLED=true

# ===========================
# EMAIL CONFIGURATION
# ===========================
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USER=noreply@your-domain.com
MAIL_PASSWORD=CHANGE_THIS_SMTP_PASSWORD
MAIL_FROM=TernantApp <noreply@your-domain.com>
MAIL_SECURE=false
